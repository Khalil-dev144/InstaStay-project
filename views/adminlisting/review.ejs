<% layout("/layout/admin-dashboard.ejs")%>

    <div class="container mt-4">
        <h2 class="text-center fw-bold">Manage Reviews</h2>
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>User</th>
                    <th>Rating</th>
                    <th>Comment</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% reviews.forEach((review)=> { %>
                    <tr>
                        <td>
                            <%= review.Author.username %>
                        </td>
                        <td>
                            <% for (let i=0; i < review.rating; i++) { %>
                                <i class="fa fa-star text-warning"></i>
                                <% } %>
                        </td>
                        <td>
                            <%= review.comment %>
                        </td>
                        <td>
                            <form action="/admin/review/<%= review._id %>/delete" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm"> <i class="fas fa-trash"></i><span
                                        class="ms-2">Delete</span></button>
                            </form>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>