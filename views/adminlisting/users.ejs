<% layout("/layout/admin-dashboard.ejs")%>

    <div>
        <h3 class="text-center fw-bold mb-3">Users Management</h3>

        <div class="row d-flex justify-content-center align-items-center mt-3">
            <div class="col-md-5 mb-3">
                <div class="card text-center shadow-lg rounded">
                    <div class="card-body">
                        <h5 class="card-title fw-bold">Total Users</h5>
                        <p class="card-text fs-4 text-primary">
                            <%= users.length %>
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-5 mb-3">
                <div class="card text-center shadow-lg rounded">
                    <div class="card-body">
                        <h5 class="card-title fw-bold">Revenue</h5>
                        <p class="card-text fs-4 text-success">$120,000</p>
                    </div>
                </div>
            </div>
        </div>


        <div class="table-responsive shadow-lg p-2 bg-white rounded mt-4">
            <table class="table table-hover table-striped align-middle text-center">
                <thead class="table-dark">
                    <tr>
                        <th>No.</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Actions</th>

                    </tr>
                </thead>
                <tbody>
                    <% users.forEach((user, index)=> { %>
                        <tr>
                            <td class="fw-bold">
                                <%= index + 1 %>
                            </td>
                            <td>
                                <%= user.username %>
                            </td>
                            <td>
                                <%= user.email %>
                            </td>
                            <td>
                                <% if (user.isAdmin) { %>
                                    <span class="badge bg-success">Admin</span>
                                    <% } else { %>
                                        <span class="badge bg-secondary">User</span>
                                        <% } %>
                            </td>
                            <td>
                                <a href="/admin/edit-user/<%= user._id %>" class="btn btn-warning btn-sm rounded-pill">
                                    <i class="fas fa-edit"></i> <span class="d-sm-inline">Edit</span>
                                </a>
                                <a href="/admin/delete-user/<%= user._id %>"
                                    class="btn btn-danger btn-sm rounded-pill ms-2">
                                    <i class="fas fa-trash"></i> <span class="d-sm-inline">Delete</span>
                                </a>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
    </div>