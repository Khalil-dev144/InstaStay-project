<% layout("/layout/boilerplate") %>
<div class="row mt-3 mb-3">
    <h1 class="col-6 offset-3">SignUp For InstaStay</h1>
    <div class="col-6 offset-3">
        <form action="/SignUp" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-title">Username</label>
                <input type="text" name="username" id="username" class="form-control" required>
                <div class="valid-feedback">look's Good!</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-title">Email</label>
                <input type="email" name="email" id="email" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-title">Password</label>
                <input type="password" name="password" id="password" class="form-control" required>
            </div>
            <button class="btn btn-success me-2">SignUp</button>
            <button class="btn btn-outline-success ms-2">Login</button>
        </form>
    </div>
</div>