<% layout("/layout/boilerplate") %>
<div class="container-fluid">
    <div class="row mt-3 mb-3 justify-content-center">
        <h1 class="col-12 text-center">SignUp</h1>
        <div class="col-12 col-md-6 col-lg-4">
            <form action="/SignUp" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-title">Username</label>
                    <input type="text" name="username" id="username" class="form-control" required>
                    <div class="valid-feedback">look's Good!</div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-title">Email</label>
                    <input type="email" name="email" id="email" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-title">Password</label>
                    <input type="password" name="password" id="password" class="form-control" required>
                </div>
                <button class="btn btn-success me-2 w-100">SignUp</button>
            </form>
            <div class="text-center login-page mt-2">
                <span>Already have an account?</span>
                <a href="/login">Log in</a>
            </div>
        </div>
    </div>
</div>
